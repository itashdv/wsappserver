<%- include('./partials/header'); %>

<%- include('./partials/navbar'); %>

<h2 class="text-center"><%= menuItem.name %></h2>
<div class="row">
    <div class="col-6 text-left">
        <a href="<%= `/menus/${ menuItem.menuId }` %>">Back to Menu</a>
    </div>
    <div class="col-6 text-right">
        <button class="btn btn-primary" data-toggle="collapse" data-target="#menuItemOptions">Options</button>
    </div>
</div>
<div id="menuItemOptions" class="collapse">
    <div class="row">
        <div class="col-md-6">
            <h3 class="text-center">Update menu item</h3>
            <div style="border: 1px solid #c3c3c3; border-radius: 5px; margin: 10px; padding: 20px;">
                <form action="/menuitems/update" method="POST">
                    <label>Name</label>
                    <input class="form-control" name="name" type="text" />
                    <br />
                    <label>Description</label>
                    <textarea class="form-control" name="description"></textarea>
                    <br />
                    <label>Image</label>
                    <div>
                        <img class="mx-auto d-block" style="max-height: 250px;" id="addMenuItemPreview" />
                    </div>
                    <input class="form-control" type="file" accept="image/*" onchange="openImg(event, 'addMenuItem')" />
                    <input id="addMenuItemUrl" name="image" type="hidden" value="" />
                    <input name="id" type="hidden" value="<%= menuItem.id %>" />
                    <br />
                    <p class="text-center"><input class="btn btn-success" type="submit" value="Update" /></p>
                </form>
            </div>
        </div>
        <div class="col-md-6">
            <h3 class="text-center">Delete menu item</h3>
            <div style="border: 1px solid #c3c3c3; border-radius: 5px; margin: 10px; padding: 20px;">
                <form action="/menuitems/delete" method="POST">
                    <label>Type numbers from 1 to 5..</label>
                    <input class="form-control" name="confirm" type="text" required />
                    <input name="id" type="hidden" value="<%= menuItem.id %>" />
                    <input name="menuId" type="hidden" value="<%= menuItem.menuId %>" />
                    <br />
                    <p class="text-center"><input class="btn btn-danger" type="submit" value="Delete" /></p>
                </form>
            </div>
        </div>
    </div>
</div>
<hr />
<div class="row">
    <div class="col-md-6 text-center">
        <h5>Name:</h5>
        <h4><%= menuItem.name %></h4>
        <hr />
        <h5>Description:</h5>
        <h4><%= menuItem.description %></h4>
    </div>
    <div class="col-md-6 text-center">
        <h5>Image:</h5>
        <div>
            <img class="mx-auto d-block" style="max-height: 250px;" src="<%= menuItem.image %>" />
        </div>
    </div>
</div>
<hr />
<div>
    <h4 class="text-center">Items</h4>
    <div class="row">
        <div class="col-md-6">
            <h5 class="text-center">List of currently available items:</h5>
            <ol>
                <% items.map(item => { %>
                    <li><a href="<%= `/items/${ item.id }` %>"><%= item.name %></a></li>
                <% }) %>
            </ol>
        </div>
        <div class="col-md-6">
            <h5 class="text-center">Add new item:</h5>
            <p>You can add extra information(calories, allergens and extra images) after creating the item.</p>
            <form action="/items" method="POST">
                <label>Name</label>
                <input class="form-control" name="name" type="text" required />
                <label>Description</label>
                <textarea class="form-control" name="description" required ></textarea>
                <label>Image</label>
                <div>
                    <img class="mx-auto d-block" style="max-height: 250px;" id="addItemImgPreview" />
                </div>
                <input class="form-control" type="file" accept="image/*" onchange="addImg(event, 'addItemImg')" required />
                <input id="addItemImgUrl" name="image" type="hidden" value="" required />
                <input type="hidden" name="menuItemId" value="<%= menuItem.id %>" required />
                <br />
                <p class="text-center">
                    <input class="btn btn-primary" value="Add" type="submit" />
                </p>
            </form>
        </div>
    </div>
</div>

<%- include('./partials/footer'); %>